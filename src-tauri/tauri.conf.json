{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Inkwell",
  "version": "0.2.0",
  "identifier": "com.inkwell.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Inkwell - AI Writing Assistant",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "category": "Productivity",
    "shortDescription": "AI-powered offline writing assistant",
    "longDescription": "Inkwell is a beautiful, offline-first AI writing assistant powered by Ollama. Write, edit, and enhance your documents with local AI - no internet required."
  }
}