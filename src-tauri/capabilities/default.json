{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with HTTP and File System access",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "http:default",
    "http:allow-fetch",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "dialog:allow-save",
    "dialog:allow-open",
    "dialog:default",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://localhost:*"
        },
        {
          "url": "http://127.0.0.1:*"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        "$DOCUMENT/*",
        "$DOCUMENT/**",
        "$HOME/Documents/*",
        "$HOME/Documents/**",
        "$APPDATA/*",
        "$APPDATA/**"
      ]
    }
  ]
}